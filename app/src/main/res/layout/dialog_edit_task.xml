<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Task Title Input -->
    <EditText
        android:id="@+id/editDialogTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit task title"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="#333333"
        android:textColorHint="#AAAAAA"
        android:inputType="text" />

    <!-- Due Date Picker -->
    <TextView
        android:id="@+id/editDialogDueDateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Due Date"
        android:textSize="16sp"
        android:textColor="#666666" />

    <DatePicker
        android:id="@+id/editDialogDueDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="true"
        android:spinnersShown="false"
        android:layout_marginTop="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/dialogEditSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        <Button
            android:id="@+id/dialogEditCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_delete_button"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
